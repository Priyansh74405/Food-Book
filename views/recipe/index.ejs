<%layout("/layouts/boilerplate")%> <%success%>
<body>
  <div class="row row-cols-lg-3 mt-3 row-cols-md-2 row-cols-sm-1">
    <%for(let recipe of allRecipe) {%>
    <a href="/food/<%=recipe._id%>" class="recipe-link">
      <div class="card col recipe-card" style="width: 23rem">
        <img
          src="<%=recipe.image.url%>"
          class="card-img-top"
          alt="food_img"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><b><%=recipe.name%></b></p>
          <p class="card-text">
            <b><i class="fa-regular fa-clock"></i> : <%=recipe.time%>mins</b>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
